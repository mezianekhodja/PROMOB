<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenue sur notre application !"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possibilité d'affronter vos amis dans des parties acharnées et d'enregistrer votre progression"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/btn_P1_connexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se connecter / Créer un compte" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pas de sauvegarde des scores et pas de multijoueur"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btn_P1_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jouer en tant qu'invité"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/games_by_mez_and_vince"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 0.1"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:gravity="center"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>