<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogoQuizzMedium4">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 4" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="227dp"
            app:srcCompat="@drawable/seville" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir le club" />

        <RadioGroup
            android:id="@+id/radioLQM4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButtonLQM4a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sampodria" />

            <RadioButton
                android:id="@+id/radioButtonLQM4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strasbourg" />

            <RadioButton
                android:id="@+id/radioButtonLQM4c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saint Etienne" />

            <RadioButton
                android:id="@+id/radioButtonLQM4d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seville" />

            <Button
                android:id="@+id/buttonLQM4svt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="suivant" />
        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>